<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="School.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:School.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
        Title="Schools"
        ContentTemplate="{DataTemplate view:SchoolPage}"
        Route="MainPage" />
        
        <ShellContent
        Title="Employees"
        ContentTemplate="{DataTemplate view:Employee.AllEmployeesPage}"/>
    </TabBar>

</Shell>
