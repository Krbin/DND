<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="School.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:School.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
        Title="Teachers"
        ContentTemplate="{DataTemplate view:TeacherPage}"
        Route="MainPage" />
        <ShellContent
        Title="Students"
        ContentTemplate="{DataTemplate view:ServicePersonalPage}"
        />
        <ShellContent
        Title="Service Personal"
        ContentTemplate="{DataTemplate view:SupportPersonalPage}"
        />
        <ShellContent
        Title="Support Personal"
        ContentTemplate="{DataTemplate view:ServicePersonalPage}"
        />
    </TabBar>

</Shell>
